{{>layout/header}}
{{>layout/nav}}
<h1>책 상세 정보</h1>
<a href="/books/bookList" role="button" class="btn btn-outline-dark float-right">목록</a>
<script type="text/javascript">
    function goBack(){
        window.history.back();
    }
</script>
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>책제목</th>
        <th>저자</th>
        <th>출간일</th>
        <th>출판사</th>
        <th>가격</th>
        <th>장르</th>
        <th>상세정보</th>
        <th>재고량</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#bookInfo}}
    <tr>
        <td>{{bookName}}</td>
        <td>{{bookAut}}</td>
        <td>{{bookDate}}</td>
        <td>{{bookHouse}}</td>
        <td>{{bookPri}}</td>
        <td>{{bookGen}}</td>
        <td>{{bookDet}}</td>
        <td>{{bookSto}}</td>
    </tr>
    {{/bookInfo}}
    </tbody>
</table>
<a href="/books/bookUpdate/{{isbn}}" role="button" class="btn btn-outline-dark float-right">정보 수정</a>
{{>layout/bookFooter}}