{{>layout/header}}
{{>layout/nav}}
<div class="container">
<a href="/" role="button" class="btn btn-outline-dark float-right">책 목록</a>
<h1 class="d-flex justify-content-center">장바구니</h1>
<div class="col-md-12 d-flex justify-content-center">
<table class="list" >
    <tbody>
    {{^basketInfo}}
    <p class="d-flex">장바구니가 비었습니다</p>
    {{/basketInfo}}
    {{#basketInfo}}
        <tr style="border-bottom: 1px solid #444444">
            <td>
                <p><b>책제목</b> : {{books.bookName}} | <b>수량</b> : {{basAmount}} | <b>총합</b> : 
                <script>
                    var count = {{books.bookPri}}*{{basAmount}};
                    document.write(count.toString());
                </script>
                <button type="button" class="btn btn-outline-dark float-right ml-5" id="btn-basketInfoDelete">삭제</button>
                </p>
            </td>
        </tr>
    {{/basketInfo}}
    </tbody>
</table>
</div>
</div>
