{{>layout/header}}
{{>layout/nav}}
<div class="container">
<a href="/books/bookList" role="button" class="btn btn-outline-dark float-right">책 목록</a>
<h1 class="d-flex">주문</h1>
<div class="col-md-8 ">
<table class="list" >
    <tbody>
        <tr style="border-bottom: 1px solid #444444">
            <td>
            {{#bookInfo}}
                <p>책제목 : {{bookName}} | 가격 :  {{bookPri}} | 수량 : {{#orderAmount}}{{orderAmount}}{{/orderAmount}} | 총합 : 
                <script>
                    document.write({{bookPri}}*{{orderAmount}});
                </script>
                </p>
            {{/bookInfo}}
            </td>
        </tr>
    </tbody>
</table>
<div>배송지
    <select class="custom-select" id="addr">
        <option selected value="0">선택해주세요</option>
        {{#addrInfo}}
            <option value="{{addrCode}}">{{addrName}} / {{addrZip}} / {{addrBas}} / {{addrDet}}</option>
        {{/addrInfo}}
    </select>
</div>
<div>카드
    <select class="custom-select" id="card">
        <option selected value="0">선택해주세요</option>
        {{#cardInfo}}
            <option value="{{cardNum}}">{{cardNum}} / {{cardVal}}</option>
        {{/cardInfo}}
    </select>
</div>
<button type="button" class="btn btn-outline-dark float-right mt-5" id="btn-ordersBuy">주문하기</button>
</div>
</div>
{{>layout/footer}}