{{>layout/header}}
{{>layout/nav}}
<h1>배송지 등록</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label for="addrNic">배송지 이름</label>
                <input type="text" class="form-control" id="addrNic" placeholder="배송지 이름를 입력하세요" required="">
            </div>
            <div class="form-group">
                <label for="addrName">수령인</label>
                <input type="text" class="form-control" id="addrName" placeholder="수령인를 입력하세요" required="">
            </div>
            <div class="form-group">
                <label for="addrZip">우편번호</label>
                <input type="text" class="form-control" id="addrZip" placeholder="우편번호을 입력하세요" required="">
            </div>
            <div class="form-group">
                <label for="addrBas">기본주소</label>
                <input type="text" class="form-control" id="addrBas" placeholder="기본주소를 입력하세요" required="">
            </div>
            <div class="form-group">
                <label for="addrDet">상세주소</label>
                <input type="text" class="form-control" id="addrDet" placeholder="상세주소를 입력하세요" required="">
            </div>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-outline-dark" id="btn-addrSave">등록</button>
        </form>
    </div>
</div>
{{>layout/footer}}